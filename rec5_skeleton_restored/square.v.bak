module square (
	 input	[18:0]  address,
	 input clk,
	 input reset,
	 input	[7:0]  qin,
	 output	[7:0]  qout
);

	reg [9:0] i;
	reg [9:0] j;
	
	reg [9:0] x;
	reg [9:0] y;
	
	parameter [9:0] w = 20;
	parameter [9:0] h = 40;
	parameter [7:0] colorIndex = aaaaaaaa;
	
	assign i = address / 640;
	assign j = address % 640;
	
	always@(posedge clk) begin
		if (x >= i && x < i + h && y >= j && y < j + w) begin
			qout = colorIndex;
		end
		else begin
			qout = qin;
		end
		
	end

endmodule